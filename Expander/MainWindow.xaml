<Window x:Class="Expander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expander"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Expander Header="확장" Expanded="Expander_Expanded">
                <StackPanel>
                    <TextBlock>텍스트 블럭</TextBlock>
                    <Button>버튼</Button>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="True">
                <Expander.Header>
                    <WrapPanel>
                        <Image Width="20" Source="https://cdn4.iconfinder.com/data/icons/emojis-flat-pixel-perfect/64/emoji-15-1024.png"></Image>
                        <TextBlock VerticalAlignment="Center">확장2</TextBlock>
                    </WrapPanel>
                </Expander.Header>
                <WrapPanel>
                    <TextBlock>텍스트 블럭</TextBlock>
                    <Button>버튼</Button>
                </WrapPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Window>
